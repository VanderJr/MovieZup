<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:accessibilityHeading="false">

            <Button
                android:id="@+id/BTfilmescadastrados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="48dp"
                android:background="#3F51B5"
                android:onClick="verFilmesCadastrados"
                android:text="Ver filmes cadastrados"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BTCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/BTfilmescadastrados"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:text="Cadastrar novo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RLright"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Cadastrar filme" />

            <EditText
                android:id="@+id/ETtitulocad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:hint="Nome do filme"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true" />
        </RelativeLayout>

    </RelativeLayout>
</layout>